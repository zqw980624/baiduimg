/* pages/home/search.wxss */
.search{
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}
.bg{
  position: absolute;
  width: 100vw;
  height: 100vh;
  filter: blur(5px);
  z-index:-1;
}
.container{
  margin-top: 10px; 
  width: 100vw;
  height: 100vh;
}
.logo{
  display: block;
  padding-top: 30vh; 
  font-size:20px;
  color: #d81e06;
  text-align: center;
  font-weight: bold;
}
.search-view {
  display: flex;
  align-items: center;
  width: 70vw;
  height: 40px;
  margin: auto;
  border: 1px solid #d81e06;
  padding: 0 10px;
  color: #d81e06; 
  font-weight: bold;
}
.search-view input{
  float: left;
  width: 64vw;
  height: 100%;
}
.search-view image{
  float: right;
  width: 20px;
  height: 20px;
}
.like{
  display: flex;
  flex-wrap: wrap;
  width: 80vw;
  margin: auto;
}
.like navigator{
  font-size: 12px;
  padding-top: 10px; 
  width: 25%;
  text-align: center;
  color:#d81e06;
  font-weight: bold;
}


